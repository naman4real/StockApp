<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StockApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_gray</item>
        <!-- Customize your theme here. -->
        <item name="autoCompleteTextViewStyle">@color/dark_gray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.StockApp.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <!--<item name="android:background">#000000</item>-->
    </style>

</resources>